<!DOCTYPE html>
<html>
<head>
  <title>PetitionApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
  <div id="user_nav" align="right">
    <% if current_user %>
      Logged in as <%= current_user.email %>
      <%= link_to "Выход", log_out_path %>
    <% else %>
      <%= link_to "Зарегистрироваться", sign_up_path %> | 
      <%= link_to "Войти", log_in_path %>
    <% end %>
  </div>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
  <% end %>

  <div align="right">
    <p>
      <% if @x_petition %>
      <%= link_to 'Последние петиции', petitions_path %>
      <% else %>
      <%= link_to 'Все петиции', petitions_all_path %>
      <% end %>
    </p>
    <p>
      <%= link_to 'Создать петицию', new_petition_path %>
    </p>
    <p>
      <% if current_user %>
      <%= link_to 'Мои петиции', users_user_petitions_path %>
      <%end%>
    </p>
  </div>
  <%= yield %>
</div>


</html>


